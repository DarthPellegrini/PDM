<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main4Activity"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTATOS"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:onClick="lerContatosClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEB"
            android:layout_marginHorizontal="10dp"
            android:onClick="acessarWebClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALL"
            android:layout_marginHorizontal="10dp"
            android:onClick="ligacaoClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAPS1"
            android:layout_marginHorizontal="10dp"
            android:onClick="gMaps1Click"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAPS2"
            android:layout_marginHorizontal="10dp"
            android:onClick="gMaps2Click"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAPS3"
            android:layout_marginHorizontal="10dp"
            android:onClick="gMaps3Click"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PIC ITI"
            android:layout_marginHorizontal="10dp"
            android:onClick="takePictureClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_4_contact"
            android:textColor="#000000"
            android:textSize="50px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNome"
            android:text="Nome: "
            android:textSize="50px"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTelefone"
            android:text="Telefone: "
            android:textSize="50px"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/picItiPhoto"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"/>
        </LinearLayout>
</ScrollView>